{
    "training_wkdir": "RESULTS",
    "rng_seednum": 0,

    "data_dir": "example_data",
    "train_dset_splits": ["sevenSamp"],
    "test_dset_splits": ["sevenSamp"],
    "toss_alignments_longer_than": null,
    "batch_size": 7,
    "chunk_length": 512,
    "emission_alphabet_size": 20,
    "gap_idx": 43,

    "num_epochs": 10,
    "optimizer_config": {
        "init_value": 0.005,
        "peak_value": 0.005,
        "end_value": 0.005,
        "warmup_steps": 0,
        "weight_decay": 0,
        "every_k_schedule": 1
    },
    "early_stop_cond1_atol": 1e-3,
    "early_stop_cond2_gap": 3,
    "patience": 1000,
    "update_grads": true,
    "use_scan_fns": false,

    "interms_for_tboard": {
        "encoder_sow_outputs": true,
        "ancestor_embeddings": true,
        "decoder_sow_outputs": true,
        "descendant_embeddings": true,
        "finalpred_sow_outputs": true,
        "forward_pass_outputs": true,
        "gradients": true,
        "weights": true,
        "optimizer": true
    },
    "save_arrs": true,
    "save_per_sample_losses": true,
    "checkpoint_freq_during_training": 1000,
    "norm_reported_loss_by": "desc_len",

    "anc_model_type": "cnn",
    "anc_enc_config": {"initial_embed_module": "EmbeddingWithPadding",
                       "hidden_dim": 4,
                       "kern_size_lst": [4],
                       "dropout": 0.20},

    "desc_model_type": "cnn",
    "desc_dec_config": {"initial_embed_module": "EmbeddingWithPadding",
                       "hidden_dim": 4,
                       "kern_size_lst": [4],
                       "dropout": 0.20},

    "pred_model_type": "neural_hmm",
    "pred_config": {
        "load_all": false,
        "subst_model_type": "f81",
        "indel_model_type": "tkf92",

        "global_or_local": {"equl_dist": "local",
                            "exch": "local",
                            "rate_mult": "local",
                            "tkf_rates": "local",
                            "tkf92_frag_size": "local"},

        "emissions_postproc_model_type": "feedforward",
        "emissions_postproc_config": {"use_anc_emb": true,
                                      "use_desc_emb": true,
                                      "use_prev_align_info": false,
                                      "layer_sizes": [2],
                                      "dropout": 0.20,
                                      "normalize_seq_embeddings_before_block": true,
                                      "norm_rate_mult": false},

        "transitions_postproc_model_type": "feedforward",
        "transitions_postproc_config": {"use_anc_emb": true,
                                        "use_desc_emb": true,
                                        "use_prev_align_info": true,
                                        "layer_sizes": [2],
                                        "dropout": 0.20,
                                        "normalize_seq_embeddings_before_block": true},

        "times_from": "geometric",
        "t_grid_center": 0.03,
        "t_grid_step": 1.1,
        "t_grid_num_steps": 5,
        "exponential_dist_param": 1.1

    }
    
}
