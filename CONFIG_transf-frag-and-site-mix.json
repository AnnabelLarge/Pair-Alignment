{
    "training_wkdir": "RESULTS_t-per-samp_neuralTKF92-CNN_frag-and-site-mix",
    "rng_seednum": 57,

    "data_dir": "example_data",
    "train_dset_splits": ["twoSamp"],
    "test_dset_splits": ["twoSamp"],
    "toss_alignments_longer_than": null,
    "batch_size": 2,
    "chunk_length": 512,
    "emission_alphabet_size": 20,
    "norm_reported_loss_by": "desc_len",
    "gap_idx": 43,

    "num_epochs": 2,
    "optimizer_config": {
        "init_value": 1e-4,
        "peak_value": 1e-4,
        "end_value": 1e-4,
        "warmup_steps": 0,
        "weight_decay": 1e-4,
        "every_k_schedule": 1
    },
    "early_stop_cond1_atol": 1e-3,
    "early_stop_cond2_gap": 0.5,
    "patience": 10,
    "update_grads": true,
    "use_scan_fns": false,

    "interms_for_tboard": {
        "encoder_sow_outputs": false,
        "ancestor_embeddings": false,
        "decoder_sow_outputs": false,
        "descendant_embeddings": false,
        "finalpred_sow_outputs": false,
        "forward_pass_outputs": true,
        "gradients": false,
        "weights": false,
        "optimizer": false
    },
    "save_arrs": false,
    "save_per_sample_losses": false,
    "checkpoint_freq_during_training": 1000,

    "anc_model_type": "transformer",
    "anc_enc_config": {"initial_embed_module": "EmbeddingWithPadding",
                       "first_block_module": "RoPETransfBlock",
                       "subsequent_block_module": "RoPETransfBlock",
                       "hidden_dim": 8,
                       "num_blocks": 1,
                       "num_heads": 2,
                       "dropout": 0.30,
                       "max_position_embeddings": 515
                       },

    "desc_model_type": "transformer",
    "desc_dec_config": {"initial_embed_module": "EmbeddingWithPadding",
                       "first_block_module": "RoPETransfBlock",
                       "subsequent_block_module":"RoPETransfBlock",
                       "hidden_dim": 8,
                       "num_blocks": 1,
                       "num_heads": 2,
                       "dropout": 0.30,
                       "max_position_embeddings": 515
                       },

    "pred_model_type": "neural_hmm",
    "pred_config": {
        "load_all": false,
        "subst_model_type": "f81",
        "indel_model_type": "tkf92",

        "global_or_local": {"equl_dist": "local",
                            "rate_mult": "local",
                            "tkf_rates": "local",
                            "tkf92_frag_size": "local"},

        "emissions_postproc_model_type": "feedforward",
        "emissions_postproc_config": {"use_anc_emb": true,
                                      "use_desc_emb": true,
                                      "use_prev_align_info": false,
                                      "layer_sizes": [4],
                                      "dropout": 0.20,
                                      "normalize_seq_embeddings_before_block": true,
                                      "norm_rate_mult": false},

        "transitions_postproc_model_type": "feedforward",
        "transitions_postproc_config": {"use_anc_emb": true,
                                        "use_desc_emb": true,
                                        "use_prev_align_info": true,
                                        "layer_sizes": [4],
                                        "dropout": 0.20,
                                        "normalize_seq_embeddings_before_block": true},

        "times_from": "t_per_sample"

    }
    
}
